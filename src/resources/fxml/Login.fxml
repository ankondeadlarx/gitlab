<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="720" prefWidth="1280" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.LoginController">

    <!-- Title -->
    <Label layoutX="423.0" layoutY="116.0" prefHeight="32.0" prefWidth="435.0" styleClass="title" text="Online Multiplayer Board Game Platform" />

    <VBox alignment="TOP_CENTER" layoutX="490.0" layoutY="155.0" prefWidth="300" spacing="15">
        <Label styleClass="subtitle" text="Welcome! Please enter your details." />

        <!-- Email Field -->
        <Label prefHeight="20.0" prefWidth="306.0" styleClass="input-label" text="Email" />
        <TextField fx:id="emailField" promptText="Enter your email" styleClass="input-field" />

        <!-- Password Field -->
        <Label prefHeight="20.0" prefWidth="320.0" styleClass="input-label" text="Password" />
        <PasswordField fx:id="passwordField" promptText="Password" styleClass="input-field" />

        <!-- Remember Me & Forgot Password -->
        <HBox alignment="CENTER_LEFT" spacing="60">
            <CheckBox fx:id="rememberMe" styleClass="checkbox" text="Remember me" />
            <Hyperlink fx:id="forgotPasswordLink" styleClass="link" text="Forgot password" />
        </HBox>

        <!-- Sign In Button -->
        <Button fx:id="loginButton" styleClass="login-button" text="Sign in" />

        <!-- Create an Account Button -->
        <Button fx:id="createAccountButton" styleClass="create-account-button" text="Create an Account" />



    </VBox>
    <stylesheets>
        <URL value="@../css/login.css" />
        <URL value="@login.css" />
    </stylesheets>

</AnchorPane>
